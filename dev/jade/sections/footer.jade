mixin footer(o)
    footer.footer
      .container
        .footer__row
          .footer__col.footer__col_first
            .footer__info
              .copyright © «ФастБилдинг», 2013–2016
              .footer__block
                a(href="tel:+375172475003").phone__number
                    span.phone__code + 375 17 
                    span.phone__num 247 50 03
                .adress г. Минск, <br>ул. Сурганова, 61 <br>офис 27-7, БЦ "Zebra"
                .mail
                  a.mail__adr(href="mailto:info@f-b.by") info@f-b.by
              .developer
                a.developer__text(href="") Создание сайта
                a.developer__logo(href="")
          .footer__col
            .footer__menu
              .footer__title.js-accordian-toggle.active Меню
              ul.footer__list.js-accordian-inner(style="display: block;")
                -var partnerList = ['О компании','Галерея','Отзывы','Сертификаты','Новости','Материалы для скачивания','Контакты']
                each item in partnerList
                  li.footer__item
                    a.footer__link(href="")=item 

          .footer__col
            .footer__menu
              .footer__title.js-accordian-toggle Алюминиевые профильные системы
              ul.footer__list.js-accordian-inner
                -var partnerList = ['Окна и двери из алюминиевого профиля','Внутренние перегородки для дома и офиса','Алюминиевые витражи','Терассы и зимние сады из алюминиевого профиля']
                each item in partnerList
                  li.footer__item
                    a.footer__link(href="")=item  

          .footer__col
            .footer__menu
              .footer__title.js-accordian-toggle Вентилируему фасады
              ul.footer__list.js-accordian-inner
                -var partnerList = ['Керамогранит','Панели фасадные','Натуральный камень','Дерево']
                each item in partnerList
                  li.footer__item
                    a.footer__link(href="")=item  

    #call.popup
      .popup__close.js-fancy-close
      .popup__title Оставьте свои данные и мы свяжемся с Вами <br>в течение 
        span.pink 30 минут  
      .popup__form
        form(action="").form          
          .form__block
            input.input#name_call(data-valid="name" type='text', name='form[]', placeholder='',autocomplete='name')
            label.label(for="name_call") Имя*
          .form__block
            input.input#phone_call(data-valid="phone" type='text', name='form[]', placeholder='',autocomplete='tel')
            label.label(for="phone_call") Телефон*                
          .form__btn
            button.btn.btn_blue(type='submit') Отправить   


    #feed.popup
      .popup__close.js-fancy-close
      .popup__title Оставьте свои данные и мы свяжемся с Вами <br>в течение 
        span.pink 30 минут  
      .popup__form
        form(action="").form          
          .form__block
            input.input#name_feed(data-valid="name" type='text', name='form[]', placeholder='',autocomplete='name')
            label.label(for="name_feed") Имя*
          .form__block
            input.input#phone_feed(data-valid="phone" type='text', name='form[]', placeholder='',autocomplete='tel')
            label.label(for="phone_feed") Телефон*                
          .form__block
            input.input#email_feed(data-valid="email" type='email', name='form[]', placeholder='',autocomplete='email')
            label.label(for="email_feed") E-mail*
          .form__block.form__block_radio
            input#radio_call.radio__hide(type='radio', name='choose', value='call', checked)
            label.radio.js-radio-call(for='radio_call') Заказать звонок
            br
            input#radio_ask.radio__hide(type='radio', name='choose', value='ask')
            label.radio.js-radio-ask(for='radio_ask') Задать вопрос из формы
          .form__block.form__block_text
            textarea.textarea#message_feed(name='form[]', rows='5', placeholder='', disabled)
          .form__btn
            button.btn.btn_blue(type='submit') Отправить    

    #success.popup
      .popup__close.js-fancy-close
      .popup__img
        img(src="svg/success.svg", alt="")  
      .popup__title Мы свяжемся с вами! 
        strong.dark-blue Спасибо!              