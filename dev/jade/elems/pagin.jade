mixin pagin(o)
  ul.pagin
    li.pagin__item
      a.pagin__prev.btn.btn_blue(href='#') 
        span Первая
    li.pagin__item
      a.pagin__link(href='#') 1
    li.pagin__item.active
      a.pagin__link(href='#') 2
    li.pagin__item
      a.pagin__link(href='#') 3
    li.pagin__item
      a.pagin__link(href='#') ...
    li.pagin__item
      a.pagin__link(href='#') 12
    li.pagin__item
      a.pagin__next.btn.btn_blue(href='#') 
        span Последняя
